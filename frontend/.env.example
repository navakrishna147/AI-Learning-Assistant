# ============================================================================
# FRONTEND ENVIRONMENT - EXAMPLE
# ============================================================================
# Copy this file to .env and adjust if needed.
# Vite only exposes variables prefixed with VITE_.

# API base path. In development the Vite proxy forwards /api/* to the backend.
# In production builds set to the absolute backend URL:
#   VITE_API_URL=https://api.example.com/api
VITE_API_URL=/api

# Direct backend URL - used by the Vite proxy target.
# IMPORTANT: use 127.0.0.1, NOT localhost (avoids IPv6 resolution issues).
VITE_BACKEND_URL=http://127.0.0.1:5000

# Request timeout in ms (increase if MongoDB or AI calls are slow)
VITE_API_TIMEOUT=60000

# Health check timeout in ms
VITE_HEALTH_CHECK_TIMEOUT=10000

# Debug flags (set to false in production)
VITE_DEBUG_MODE=true
VITE_DEBUG_NETWORK=true
VITE_DEBUG_API=true
